<p id="notice"><%= notice %></p>

<h1>Cars</h1>
<%= paginate @cars %>
<table>
  <thead>
    <tr>
      <th>Manufacture</th>
      <th>Model</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= search_form_for @q do |f| %>

  <%= f.label :model_or_year_or_manufacture_or_articles_title_cont %>
  <%= f.search_field :model_or_year_or_manufacture_or_articles_title_cont %>

  <%= f.submit %>

<% end %>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.manufacture %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= link_to 'Show', admin_car_path(car) %></td>
        <td><%= link_to 'Edit', edit_admin_car_path(car) %></td>
        <td><%= link_to 'Destroy', admin_car_path(car), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_admin_car_path %>
